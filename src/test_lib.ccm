namespace test_lib {
  export void print_result(
    const std::vector<TestResult> &results, std::ostream &os = std::cout
  ) {
    std::cout<<"================== Test Result =====================\n";
    for (uint32_t i = 0; i < results.size(); i += 1) {
      std::cout<< std::format("{}. ", i + 1);
      std::cout<< results[i].get_print_result() << std::endl;
    }
  }
}